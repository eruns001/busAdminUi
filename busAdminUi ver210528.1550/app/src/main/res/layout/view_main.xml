<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/backGroundMain">
    <ImageButton
        android:id="@+id/btn_view_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_side_clickoff"
        android:src="@drawable/btn_side_light_bsc"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_view_ac"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageButton
        android:id="@+id/btn_view_ac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_side_clickoff"
        android:src="@drawable/btn_side_ac_bsc"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_light"
        app:layout_constraintBottom_toTopOf="@+id/btn_view_display"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageButton
        android:id="@+id/btn_view_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_side_clickoff"
        android:src="@drawable/btn_side_display_bsc"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_ac"
        app:layout_constraintBottom_toTopOf="@+id/btn_view_table"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <ImageButton
        android:id="@+id/btn_view_table"
        android:layout_width="152.76dp"
        android:layout_height="222.07dp"
        android:background="@drawable/btn_side_clickoff"
        android:src="@drawable/btn_side_table_bsc"
        android:scaleType="center"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_view_display"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <FrameLayout
        android:id="@+id/fragment_test"
        android:layout_marginHorizontal="15dp"
        android:layout_marginVertical="24dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_view_light"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>