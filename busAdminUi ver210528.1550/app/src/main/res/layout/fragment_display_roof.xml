<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backGroundMain">

    <ImageView
        android:id="@+id/background_display"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_display_rooftype"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_displayRoofType_horizontal_1st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.38"/>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_displayRoofType_horizontal_2st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.652"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_displayRoofType_vertical_1st"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <TextView
        android:id="@+id/textView_displayRoofType"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:text="ROOF DISPLAY"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/background_display"
        app:layout_constraintLeft_toLeftOf="@+id/background_display"
        app:layout_constraintRight_toRightOf="@id/background_display"/>

    <ImageButton
        android:id="@+id/btn_displayRoofType_onoff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backGround1deep"
        android:src="@drawable/btn_onoff_off"
        app:layout_constraintTop_toBottomOf="@+id/textView_displayRoofType"
        app:layout_constraintBottom_toTopOf="@+id/guideline_displayRoofType_horizontal_1st"
        app:layout_constraintLeft_toLeftOf="@+id/background_display"
        app:layout_constraintRight_toRightOf="@+id/background_display"/>
    <ImageButton
        android:id="@+id/btn_displayRoofType_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backGround1deep"
        android:src="@drawable/btn_display_input"
        app:layout_constraintTop_toTopOf="@id/guideline_displayRoofType_horizontal_1st"
        app:layout_constraintBottom_toTopOf="@id/guideline_displayRoofType_horizontal_2st"
        app:layout_constraintLeft_toLeftOf="@id/background_display"
        app:layout_constraintRight_toLeftOf="@id/guideline_displayRoofType_vertical_1st"/>
    <ImageButton
        android:id="@+id/btn_displayRoofType_Fold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/backGround1deep"
        android:src="@drawable/btn_display_foldoff"
        app:layout_constraintTop_toTopOf="@id/guideline_displayRoofType_horizontal_1st"
        app:layout_constraintBottom_toTopOf="@id/guideline_displayRoofType_horizontal_2st"
        app:layout_constraintLeft_toRightOf="@id/guideline_displayRoofType_vertical_1st"
        app:layout_constraintRight_toRightOf="@id/background_display"/>
    <ImageButton
        android:id="@+id/btn_displayRoofType_minus"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/backGround1deep"
        android:src="@drawable/btn_minus"
        app:layout_constraintTop_toBottomOf="@id/guideline_displayRoofType_horizontal_2st"
        app:layout_constraintBottom_toBottomOf="@+id/background_display"
        app:layout_constraintLeft_toLeftOf="@id/background_display"
        app:layout_constraintRight_toLeftOf="@id/guideline_displayRoofType_vertical_1st"/>
    <ImageButton
        android:id="@+id/btn_displayRoofType_plus"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/backGround1deep"
        android:src="@drawable/btn_plus"
        app:layout_constraintTop_toBottomOf="@id/guideline_displayRoofType_horizontal_2st"
        app:layout_constraintBottom_toBottomOf="@id/background_display"
        app:layout_constraintLeft_toRightOf="@id/guideline_displayRoofType_vertical_1st"
        app:layout_constraintRight_toRightOf="@id/background_display"/>

</androidx.constraintlayout.widget.ConstraintLayout>